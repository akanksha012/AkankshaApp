                            android:background="#ccc"></View>
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#00f"
                            android:textStyle="bold"
                            android:text="Latitude" />

                        <TextView
                            android:id="@+id/tvlatitude"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="latitude" />
                    </TableRow>
                    <TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#ccc"></View>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:layout_height="1dp"

                            android:background="#ccc"></View>
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#00f"
                            android:textStyle="bold"
                            android:text="Latitude" />

                        <TextView
                            android:id="@+id/tvlongitude"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Longitude" />
                    </TableRow>
                    <TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#ccc"></View>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:layout_height="1dp"

                            android:background="#ccc"></View>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/linkgoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#00f"
                    android:padding="5dp"
                    android:text="GoogleMap"
                    android:textAlignment="center"
                    android:textColor="#fff" />


                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                  >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="SUN" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="MON" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="TUE" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="WED" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="THU" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="FRI" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:text="SAT" />


                    </TableRow>


                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:id="@+id/dsun"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Y" />

                        <TextView
                            android:id="@+id/dmon"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Y" />

                        <TextView
                            android:id="@+id/dtue"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Y" />

                        <TextView
                            android:id="@+id/dwed"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Y" />

                        <TextView
                            android:id="@+id/dthu"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Y" />

                        <TextView
                            android:id="@+id/dfri"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Y" />

                        <TextView
                            android:id="@+id/dsat"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Y" />
                    </TableRow>
                </TableLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
