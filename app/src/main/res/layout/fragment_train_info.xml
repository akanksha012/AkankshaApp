<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="akanshaapp.com.geu.akanshaapp.akanshaapp.TrainInfoFragment">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:id="@+id/ll"
   >

    <AutoCompleteTextView
        android:id="@+id/actsource"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:hint="Train No. or Train Name" />


    <Button
        android:id="@+id/bsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actsource"
        android:layout_gravity="center"
        android:text="Search" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/layouttraininfo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/ll"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"


            card_view:cardBackgroundColor="#fff"
            card_view:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:divider="@android:color/black"
                        android:padding="5dp"
>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#00f"
                            android:textStyle="bold"
                            android:text="Train Number" />

                        <TextView
                            android:id="@+id/tvtrainno"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Train Number" />
                    </TableRow>

                    <TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
android:layout_weight="1"
                            android:background="#ccc"></View>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:layout_height="1dp"

                            android:background="#ccc"></View>
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#00f"
                            android:textStyle="bold"
                            android:text="Train Name" />

                        <TextView
                            android:id="@+id/tvtrainname"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Train Name" />
                    </TableRow>

                    <TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#ccc"></View>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:layout_height="1dp"

                            android:background="#ccc"></View>
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#00f"
                            android:textStyle="bold"
                            android:text="Source Station" />

                        <TextView
                            android:id="@+id/tvsource"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Source Station" />
                    </TableRow>

                    <TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#ccc"></View>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:layout_height="1dp"

                            android:background="#ccc"></View>
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#00f"
                            android:textStyle="bold"
                            android:text="Destination Station" />

                        <TextView
                            android:id="@+id/tvdestination"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Destination Station" />
                    </TableRow>
                    <TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#ccc"></View>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:layout_height="1dp"

                            android:background="#ccc"></View>
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#00f"
                            android:textStyle="bold"
                            android:text="Arrival Time" />

                        <TextView
                            android:id="@+id/tvarrival"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Arrival Time" />
                    </TableRow>
                    <TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#ccc"></View>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:layout_height="1dp"

                            android:background="#ccc"></View>
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#00f"
                            android:textStyle="bold"
                            android:text="Departure Time" />

                        <TextView
                            android:id="@+id/tvdeparture"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Departure Time" />
                    </TableRow>
                    <TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#ccc"></View>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:layout_height="1dp"

                            android:background="#ccc"></View>
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#00f"
                            android:textStyle="bold"
                            android:text="State" />

                        <TextView
                            android:id="@+id/tvstate"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="State" />
                    </TableRow>
                    <TableRow>

                        <View
